  // Git
  "git.mergeEditor": false,

  // Files & Workspace
  "files.exclude": {
    "**/node_modules": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.insertFinalNewline": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.typegen.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
    "*.mts": "${capture}.typegen.ts",
    "*.cts": "${capture}.typegen.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },
  "explorer.compactFolders": false,

  // ESLint
  "eslint.debug": true,
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Debugging
  "debug.javascript.autoAttachFilter": "always",

  // Solidity
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },

  // UX & Window
  "workbench.sideBar.location": "left",
  "workbench.editor.tabSizing": "shrink",
  "window.openFilesInNewWindow": "off",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#383838"
  },

  // Extensions
  "extensions.ignoreRecommendations": true,
  "workbench.colorTheme": "Tokyo Hack",
  "github.copilot.nextEditSuggestions.enabled": true,
  "markdown-preview-enhanced.previewTheme": "monokai.css",
  "workbench.editor.enablePreview": false,
}
